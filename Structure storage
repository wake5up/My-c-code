#include<stdio.h>
int main()
{
	struct S1
	{
		char c1;
		int i;
		char c2;
	};
	printf("%d\n", sizeof(struct S1));

	struct S2 
	{    
		char c1;    
		char c2;    
		int i;
	}; 
	printf("%d\n", sizeof(struct S2));

	struct S3 
	{ 
		char c;
		double d;    
		int i; 
	}; 
	printf("%d\n", sizeof(struct S3));

	//练习4-结构体嵌套问题 
	struct S4 
	{    
		char c1;    
		struct S3 s3;   
		double d; 
	}; 
	printf("%d\n", sizeof(struct S4));
	system("pause");
	return 0;
}
